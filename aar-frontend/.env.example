# Environment Variables
# Copy to .env.local for local development

# Backend API Base URL
VITE_API_BASE_URL=http://localhost:5000

# Public path for deployment to subpaths (e.g., /app/ for mysite.com/app/)
VITE_PUBLIC_PATH=/

# SignalR Hub URL (defaults to API_BASE_URL/hubs/analysis if not set)
VITE_SIGNALR_HUB_URL=

# Enable mock mode for development without backend
VITE_MOCK_MODE=false

# Optional: Sentry DSN for error tracking
VITE_SENTRY_DSN=

# Optional: Analytics tracking ID
VITE_ANALYTICS_ID=

# App version (injected at build time)
VITE_APP_VERSION=1.0.0

# Feature flags
VITE_FEATURE_ADMIN_PANEL=true
VITE_FEATURE_RESUMABLE_UPLOAD=true
VITE_FEATURE_REALTIME=true
