{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aar.example.com/schemas/finding.schema.json",
  "title": "ReviewFinding",
  "description": "Schema for code review findings from analysis agents",
  "type": "object",
  "required": ["description", "severity", "category"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the finding"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the issue",
      "minLength": 10,
      "maxLength": 500
    },
    "explanation": {
      "type": "string",
      "description": "Detailed explanation of why this is an issue",
      "maxLength": 2000
    },
    "severity": {
      "type": "string",
      "enum": ["High", "Medium", "Low", "Info"],
      "description": "Severity level of the finding"
    },
    "category": {
      "type": "string",
      "enum": [
        "Architecture",
        "Security",
        "Performance",
        "Maintainability",
        "CodeQuality",
        "Testing",
        "Documentation",
        "Accessibility",
        "BestPractice",
        "Other"
      ],
      "description": "Category of the finding"
    },
    "filePath": {
      "type": ["string", "null"],
      "description": "Path to the file containing the issue"
    },
    "lineRange": {
      "type": ["object", "null"],
      "properties": {
        "start": {
          "type": "integer",
          "minimum": 1
        },
        "end": {
          "type": "integer",
          "minimum": 1
        }
      },
      "required": ["start", "end"]
    },
    "suggestedFix": {
      "type": ["string", "null"],
      "description": "Suggested fix for the issue",
      "maxLength": 5000
    },
    "codeSnippet": {
      "type": ["string", "null"],
      "description": "Original code snippet showing the issue",
      "maxLength": 5000
    },
    "sources": {
      "type": "array",
      "description": "Source chunks that informed this finding",
      "items": {
        "type": "object",
        "required": ["chunkId", "filePath"],
        "properties": {
          "chunkId": {
            "type": "string",
            "description": "ID of the source chunk"
          },
          "filePath": {
            "type": "string",
            "description": "File path of the source"
          },
          "startLine": {
            "type": "integer",
            "minimum": 1
          },
          "endLine": {
            "type": "integer",
            "minimum": 1
          },
          "score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Relevance score of the source"
          }
        }
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence score for this finding"
    }
  },
  "additionalProperties": false
}
