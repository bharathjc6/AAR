{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  
  "_comment": "Development configuration - secrets come from user-secrets or secrets.local.json",
  "KeyVault": {
    "UseKeyVault": false,
    "UseMockKeyVault": true,
    "LocalSecretsPath": "secrets.local.json",
    "ThrowOnUnavailable": false
  },
  
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=AAR;Integrated Security=True;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "UseSqlServer": true,
  
  "Embedding": {
    "UseMock": true
  },
  
  "VectorStore": {
    "Provider": "InMemory"
  }
}
