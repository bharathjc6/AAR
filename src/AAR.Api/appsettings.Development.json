{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  
  "_comment": "Development configuration - uses local Ollama and Qdrant services",
  "KeyVault": {
    "UseKeyVault": false,
    "UseMockKeyVault": true,
    "LocalSecretsPath": "secrets.local.json",
    "ThrowOnUnavailable": false
  },
  
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=AAR;Integrated Security=True;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "UseSqlServer": true,
  
  "MassTransit": {
    "RegisterConsumers": true,
    "UseAzureServiceBus": false
  },
  
  "_comment_ai": "Use local Ollama and Qdrant for development",
  "AI": {
    "Provider": "Local",
    "Local": {
      "OllamaUrl": "http://127.0.0.1:11434",
      "LLMModel": "qwen2.5-coder:7b",
      "EmbeddingModel": "bge-large:latest",
      "TimeoutSeconds": 120,
      "MaxRetries": 3,
      "Temperature": 0.3,
      "MaxTokens": 4096
    },
    "VectorDb": {
      "Type": "Qdrant",
      "Url": "http://localhost:6333",
      "ApiKey": "",
      "CollectionPrefix": "aar_dev",
      "Dimension": 1024
    }
  },
  
  "Embedding": {
    "UseMock": false
  }
}
