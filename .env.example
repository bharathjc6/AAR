# Environment Configuration Template
# Copy this file to .env and fill in the values

# Database
# For SQLite (development): Data Source=aar.db
# For SQL Server: Server=localhost;Database=AAR;User Id=sa;Password=YourPassword;TrustServerCertificate=true
SQL_CONNECTION_STRING=Data Source=aar.db

# Use SQL Server instead of SQLite
USE_SQL_SERVER=false

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_USE_MOCK=true

# Azure Storage (for production)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# Storage Provider: FileSystem or Azure
BLOB_STORAGE_PROVIDER=FileSystem
BLOB_STORAGE_BASE_PATH=./storage

# Queue Provider: InMemory or Azure
QUEUE_SERVICE_PROVIDER=InMemory

# API Configuration
API_KEY=your-api-key-for-authentication

# Logging
LOG_LEVEL=Information
