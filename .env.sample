# =============================================================================
# AAR Environment Variables Sample
# Copy this file to .env and configure for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# Required Configuration
# -----------------------------------------------------------------------------

# Azure OpenAI - Required for AI analysis
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Database - Required
# For local development, use SQLite (default in Development)
# For production, configure PostgreSQL or SQL Server
DATABASE_CONNECTION_STRING=Host=localhost;Database=aar;Username=aar;Password=secret

# -----------------------------------------------------------------------------
# Security Configuration (Production)
# -----------------------------------------------------------------------------

# API Key Salt - Used for hashing API keys
# Generate with: openssl rand -base64 32
API_KEY_SALT=generate-a-random-32-character-string

# JWT Configuration (optional, for bearer token auth)
JWT_SECRET=your-jwt-secret-key-at-least-32-characters
JWT_ISSUER=https://your-domain.com
JWT_AUDIENCE=aar-api

# Azure AD (optional, for enterprise SSO)
# AZURE_AD_TENANT_ID=your-tenant-id
# AZURE_AD_CLIENT_ID=your-client-id
# AZURE_AD_CLIENT_SECRET=your-client-secret

# -----------------------------------------------------------------------------
# Storage Configuration (Production)
# -----------------------------------------------------------------------------

# Azure Blob Storage (optional, uses local storage if not set)
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# Azure Service Bus Queue (optional, uses in-memory queue if not set)
# AZURE_SERVICEBUS_CONNECTION_STRING=Endpoint=sb://...

# Local storage path (for development)
STORAGE_BASE_PATH=./storage

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------

# Rate limit for unauthenticated requests (per IP)
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Rate limit for authenticated requests (per API key)
RATE_LIMIT_AUTHENTICATED_PER_MINUTE=1000

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Environment
ASPNETCORE_ENVIRONMENT=Development

# Logging level: Verbose, Debug, Information, Warning, Error, Fatal
LOG_LEVEL=Information

# Enable Swagger UI (disable in production)
ENABLE_SWAGGER=true

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# -----------------------------------------------------------------------------
# File Upload Limits
# -----------------------------------------------------------------------------

# Maximum file size in bytes (default: 100MB)
MAX_FILE_SIZE_BYTES=104857600

# Maximum user storage quota in bytes (default: 1GB)
MAX_USER_QUOTA_BYTES=1073741824

# -----------------------------------------------------------------------------
# Worker Configuration
# -----------------------------------------------------------------------------

# Path to prompt templates
PROMPTS_PATH=./prompts

# Maximum concurrent analysis jobs
MAX_CONCURRENT_JOBS=5

# Analysis timeout in minutes
ANALYSIS_TIMEOUT_MINUTES=30

# -----------------------------------------------------------------------------
# Monitoring (Production)
# -----------------------------------------------------------------------------

# Application Insights (optional)
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=...

# Health check endpoint path
HEALTH_CHECK_PATH=/health

# -----------------------------------------------------------------------------
# Docker/Container Specific
# -----------------------------------------------------------------------------

# Disable .NET diagnostics in containers
DOTNET_EnableDiagnostics=0

# Prevent interactive git prompts
GIT_TERMINAL_PROMPT=0
